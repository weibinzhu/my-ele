border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    bottom: 0
    left: 0
    width : 100%
    border-top: 1px solid $color
    content: " "
  &:before
    display: block
    position: absolute
    top: 0
    left: 0
    width : 100%
    border-top: 1px solid $color
    content: " "
